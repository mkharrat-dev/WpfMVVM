<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="MainWindow" Height="450" Width="800"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" Margin="10,10,10,49" ItemsSource="{Binding Customers}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                <DataGridTextColumn Header="PostalCode" Binding="{Binding PostalCode}" />
                <DataGridTextColumn Header="Country" Binding="{Binding Country}" />
                <DataGridTextColumn Header="Professional Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Phone number" Binding="{Binding Phone}" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Width="75">
                                <Grid>
                                    <Button Content="S" Width="25" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
                                    <Button Content="E" Width="25" VerticalAlignment="Bottom" Margin="50,0,0,0"/>
                                    <Button Content="D" Width="25" VerticalAlignment="Bottom" Margin="0,0,50,0"/>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Nouveau" Margin="0,0,10,10" HorizontalAlignment="Right" Width="108" Height="34" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
